<div class = 'container-fluid'>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <h3>User info</h3>
      <table class='table table-bordered table-striped '>
        <tr>
         <th>
           Id
         </th>  
         <td>
           <%=@user.id%>  
         </td>
        </tr>
        <tr>
         <th>
           Name
         </th>  
         <td>
           <%=@user.name%>  
         </td>
        </tr>
        <tr>
         <th>
           Surname
         </th>  
         <td>
           <%=@user.surname%>  
         </td>
        </tr>
        <tr>
         <th>
           Email
         </th>  
         <td>
           <%=@user.email%>  
         </td>
        </tr>
        <tr>
         <th>
           Age
         </th>  
         <td>
           <%=@user.age%>  
         </td>
        </tr>
        <tr>
         <th>
           Sex
         </th>  
         <td>
           <%=@user.sex%>  
         </td>
        </tr>
      </table>
      <%= link_to 'Back',:back , class: "btn btn-outline-info" %>
    </div>
  </div>
</div>