<div class = 'container'>
  <div class = "col-md-10 col-md-offset-1">
    <table class='table table-striped table-hover'>
      <thead class = 'thead-dark'>
        <tr>
          <th>Id</th>    
          <th>Email</th>
          <th>Name</th>
          <th>Surname</th>
          <th>Sex</th>
          <th colspan="3">Age</th>
        </tr>
      </thead>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.surname %></td>
          <td><%= user.sex %></td>
          <td><%= user.age %></td>      
          <td><%= link_to 'Show', user_path(user), class: "btn btn-info" %></td>
          <% if can? :manage, :all %>
            <td><%= link_to 'Edit', edit_admin_path(user), class: "btn btn-info" %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>